html
  head
    meta(charset='utf-8')
    title #{ title } - #{ site.name } 
      if (current.path.indexOf('blog') !== -1)
        | Blog
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='author', content='#{ site.author }')
    if (!!description)
      meta(name='description', content='#{ description }')
    link(rel='icon', href='/favicon.png')
    link(rel='stylesheet',  href='http://fonts.googleapis.com/css?family=Open+Sans:400,700|Alegreya+Sans:400,800')
    link(rel='stylesheet', href='/css/app.css')
    link(rel='alternate', type='application/atom+xml', title="RSS Feed" href='#{ site.productionUrl }/feed.xml')